<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imge"
    tools:context=".EditorActivity"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/images" />


    <TextView
        android:id="@+id/textHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_centerInParent="true"
        android:layout_marginTop="4dp"
        android:text="Add your picture"
        android:textColor="#fc00"
        android:textSize="30sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="328dp"
        android:layout_height="38dp"
        android:layout_below="@+id/textHint"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="5dp"
        android:background="#ff00ff"
        android:hint="Name"
        android:textColorHint="#fff"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/phoneEditText"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameEditText"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="16dp"
        android:background="#ff00ff"
        android:hint="Phone Number"
        android:inputType="number"
        android:textColorHint="#fff"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="134dp"
        android:layout_height="37dp"
        android:layout_below="@+id/nameEditText"
        android:layout_centerVertical="true"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/phoneEditText"
        android:background="#b9c660"
        android:backgroundTint="#b9c660" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="324dp"
        android:layout_height="37dp"
        android:layout_below="@+id/phoneEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="17dp"
        android:background="#ff00ff"
        android:hint="Email"
        android:textColorHint="#fff"
        android:textStyle="bold" />


</RelativeLayout>
